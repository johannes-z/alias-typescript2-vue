{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "strict": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "**/src/**/*.ts",
    "**/src/**/*.tsx",
    "**/src/**/*.vue",
    "**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}